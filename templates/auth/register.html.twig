{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {{ form_start(formRegister, { 'attr': { 'class': 'card-body flex flex-col gap-5 p-10' } }) }}
            <div class="text-center mb-2.5">
                <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                    Inscription
                </h3>
                <div class="flex items-center justify-center">
                    <span class="text-2sm text-gray-700 me-1.5">
                        Vous avez déjà un compte ?
                    </span>
                    <a class="text-2sm link" href="{{ path('auth.login') }}">
                        Me connecter
                    </a>
                </div>
            </div>

            <div class="flex flex-col gap-4">
                <div class="flex flex-col gap-1">
                    <label class="form-label text-gray-900">Email</label>
                    <div>
                        {{ form_widget(formRegister.email, {'attr': {'class': 'input', 'placeholder': 'Adresse email'}}) }}
                    </div>
                    <div class="text-danger text-sm">
                        {{ form_errors(formRegister.email) }}
                    </div>
                </div>

                <div class="flex flex-col gap-1">
                    <label class="form-label font-normal text-gray-900">Mot de passe</label>
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(formRegister.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden">
                            </i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block">
                            </i>
                        </button>
                    </div>
                    <div class="text-danger text-sm">
                        {{ form_errors(formRegister.password) }}
                    </div>
                </div>

                <div class="flex flex-col gap-1">
                    <label class="form-label font-normal text-gray-900">Confirmer le mot de passe</label>
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(formRegister.confirmPassword, {'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden">
                            </i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block">
                            </i>
                        </button>
                    </div>
                    <div class="text-danger text-sm">
                        {{ form_errors(formRegister.confirmPassword) }}
                    </div>
                </div>

                <div class="flex items-center justify-start gap-2">
                    <div>
                        {{ form_widget(formRegister.agreeTerms, {'attr': {'class': 'checkbox checkbox-sm'}}) }}
                    </div>
                    <span class="checkbox-label text-sm text-gray-700">
                        J'accepte les <a class="text-2sm link" href="#">GCU</a>
                    </span>
                    <div class="text-danger text-sm">
                        {{ form_errors(formRegister.agreeTerms) }}
                    </div>
                </div>

                <div class="flex justify-center mt-4">
                    <button class="btn btn-primary w-full flex justify-center items-center py-3">
                        Inscription
                    </button>
                </div>
            </div>
            {{ form_end(formRegister) }}
        </div>
    </div>
    <!-- End of Page -->
{% endblock %}
